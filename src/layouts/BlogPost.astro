---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				margin: 0 auto;
				max-width: var(--max-width);
				padding: 4rem 1.5rem 6rem;
			}
			.post {
				display: flex;
				flex-direction: column;
				gap: 3.5rem;
			}
			.post-hero {
				display: grid;
				gap: 2.5rem;
				padding: 3.5rem;
				background: linear-gradient(150deg, rgba(190, 242, 100, 0.18), rgba(30, 30, 30, 0.94));
				border-radius: 28px;
				box-shadow: var(--shadow-soft);
				border: 1px solid rgba(255, 255, 255, 0.05);
			}
			.hero-media {
				border-radius: 24px;
				overflow: hidden;
				box-shadow: var(--shadow-soft);
				min-height: 200px;
				background: rgba(0, 0, 0, 0.4);
				display: flex;
				align-items: center;
				justify-content: center;
			}
			.hero-media :global(img) {
				width: 100%;
				height: auto;
				display: block;
			}
			.hero-content {
				display: flex;
				flex-direction: column;
				gap: 1.25rem;
			}
			.hero-content h1 {
				margin: 0;
				font-size: clamp(2.6rem, 5vw, 3.6rem);
			}
			.description {
				margin: 0;
				font-size: 1.1rem;
				color: rgba(234, 234, 234, 0.9);
			}
			.post-meta {
				display: flex;
				flex-wrap: wrap;
				gap: 0.85rem;
				font-size: 0.95rem;
				color: var(--color-muted);
			}
			.post-content {
				padding: 3.25rem;
				display: flex;
				flex-direction: column;
				gap: 2rem;
				background: rgba(30, 30, 30, 0.96);
				border-radius: 28px;
				box-shadow: var(--shadow-soft);
				border: 1px solid rgba(255, 255, 255, 0.04);
			}
			.post-content :global(p) {
				margin-bottom: 1.5rem;
				color: rgba(234, 234, 234, 0.92);
			}
			.post-content :global(h2),
			.post-content :global(h3) {
				margin-top: 2.5rem;
			}
			@media (max-width: 960px) {
				main {
					padding: 3.25rem 1.25rem 5rem;
				}
				.post-hero {
					padding: 3rem;
				}
				.post-content {
					padding: 2.75rem;
				}
			}
			@media (max-width: 640px) {
				main {
					padding: 2.75rem 1rem 4rem;
				}
				.post-hero {
					padding: 2.25rem;
				}
				.post-content {
					padding: 2.25rem 1.75rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<article class="post">
				<header class="post-hero surface">
					{heroImage && (
						<div class="hero-media">
							<Image src={heroImage} alt="" width={1200} height={640} />
						</div>
					)}
					<div class="hero-content">
						<span class="pill">Devlog Entry</span>
						<h1>{title}</h1>
						<p class="description">{description}</p>
						<div class="post-meta">
							<span>Published <FormattedDate date={pubDate} /></span>
							{updatedDate && <span>Updated <FormattedDate date={updatedDate} /></span>}
						</div>
					</div>
				</header>
				<section class="post-content surface">
					<slot />
				</section>
			</article>
		</main>
		<Footer />
	</body>
</html>
