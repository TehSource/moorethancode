---
import type { CollectionEntry } from 'astro:content';
import type { HTMLAttributes } from 'astro/types';

type ProjectEntry = CollectionEntry<'projects'>;

interface Props extends HTMLAttributes<'article'> {
  project: ProjectEntry;
}

const { project, ...attrs } = Astro.props as Props;
const { data } = project;
const media = data.cardMedia ?? data.heroMedia;
const posterSrc = media?.poster ? media.poster.src : undefined;
const techSummary = data.tech?.slice(0, 4).join(' • ');
const projectPath = `/projects/${project.id}/`;
---

<article class="project-card surface" {...attrs}>
  <a class="project-card__media" href={projectPath} aria-label={`View ${data.title} case study`}>
    {
      media?.type === 'video' ? (
        <video
          src={media.src}
          poster={posterSrc}
          autoplay
          loop
          muted
          playsinline
        />
      ) : null
    }
  </a>
  <div class="project-card__body">
    <div class="project-card__meta">
      {data.engines?.map((engine) => (
        <span class="pill" data-variant="solid">{engine}</span>
      ))}
      {data.platforms?.map((platform) => (
        <span class="pill" data-variant="outline">{platform}</span>
      ))}
    </div>
    <h3>
  <a href={projectPath}>{data.title}</a>
    </h3>
    <p class="project-card__summary">{data.summary}</p>
    {techSummary && <p class="project-card__tech">{techSummary}</p>}
  <a class="project-card__cta" href={projectPath}>
      Case Study →
    </a>
  </div>
</article>

<style>
  .project-card {
    display: flex;
    flex-direction: column;
    gap: 1.75rem;
    padding: 1.75rem;
    background: rgba(30, 30, 30, 0.95);
    border-radius: 24px;
    box-shadow: var(--shadow-soft);
    border: 1px solid rgba(255, 255, 255, 0.04);
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }
  .project-card:hover,
  .project-card:focus-within {
    transform: translateY(-4px);
    box-shadow: var(--shadow-sharp);
  }
  .project-card__media {
    position: relative;
    display: block;
    overflow: hidden;
    border-radius: 20px;
    aspect-ratio: 16 / 9;
  }
  .project-card__media video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: saturate(1.05);
    transition: transform 0.35s ease;
    border-radius: inherit;
  }
  .project-card:hover .project-card__media video,
  .project-card:focus-within .project-card__media video {
    transform: scale(1.03);
  }
  .project-card__body {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }
  .project-card__meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  .pill[data-variant='outline'] {
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid rgba(255, 255, 255, 0.08);
  }
  .project-card__summary {
    margin: 0;
    color: var(--color-text);
    opacity: 0.9;
  }
  .project-card__tech {
    margin: 0;
    font-size: 0.85rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--color-muted);
  }
  h3 {
    margin: 0;
    font-size: 1.6rem;
  }
  h3 a {
    color: inherit;
  }
  .project-card__cta {
    align-self: flex-start;
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-accent);
    transition: transform 0.2s ease, opacity 0.2s ease;
  }
  .project-card__cta:hover,
  .project-card__cta:focus {
    transform: translateX(4px);
    opacity: 0.85;
  }
  @media (max-width: 640px) {
    .project-card {
      padding: 1.5rem;
    }
  }
</style>
