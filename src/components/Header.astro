---
import { ACCENT_COLOR, SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---
<header style={`--accent-color: ${ACCENT_COLOR};`}>
	<div class="header-inner">
			<a class="brand" href="/">
				<span class="brand-name">{SITE_TITLE}</span>
				<span class="brand-tagline">Building complete experiences, not just code.</span>
			</a>
		<nav class="main-nav" aria-label="Primary">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/projects">Projects</HeaderLink>
			<HeaderLink href="/devlog">Devlog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</nav>
		<div class="social-links">
					<a href="https://github.com/TehSource" target="_blank" rel="noreferrer">
				<span class="sr-only">GitHub</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="26" height="26">
					<path
						fill="currentColor"
						d="M8 0a8 8 0 0 0-2.529 15.593c.4.074.547-.174.547-.387 0-.19-.007-.693-.01-1.36-2.225.483-2.695-1.073-2.695-1.073-.364-.924-.89-1.171-.89-1.171-.727-.497.055-.487.055-.487.804.056 1.227.826 1.227.826.715 1.224 1.874.87 2.33.665.072-.52.28-.871.508-1.072-1.777-.203-3.646-.889-3.646-3.956 0-.874.312-1.588.823-2.149-.083-.204-.357-1.024.078-2.135 0 0 .67-.215 2.2.821a7.68 7.68 0 0 1 2-.269c.68.003 1.362.092 2 .269 1.53-1.036 2.2-.821 2.2-.821.436 1.111.162 1.931.08 2.135.513.561.822 1.275.822 2.149 0 3.075-1.872 3.75-3.655 3.95.287.247.543.735.543 1.483 0 1.071-.01 1.937-.01 2.2 0 .215.145.465.55.386A8 8 0 0 0 8 0Z"
					></path>
				</svg>
			</a>
					<a href="https://www.linkedin.com/in/jonmooredev" target="_blank" rel="noreferrer">
						<span class="sr-only">LinkedIn</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="26" height="26">
					<path
						fill="currentColor"
						d="M4.98 3.5c0 1.381-1.102 2.5-2.48 2.5C1.118 6 0 4.881 0 3.5S1.118 1 2.5 1A2.49 2.49 0 0 1 4.98 3.5zM.2 8h4.6V24H.2V8zM8.71 8h4.41v2.182h.061c.614-1.163 2.116-2.39 4.356-2.39 4.66 0 5.52 3.066 5.52 7.05V24h-4.6v-7.55c0-1.801-.03-4.119-2.51-4.119-2.51 0-2.895 1.957-2.895 3.983V24h-4.6V8z"
					></path>
				</svg>
			</a>
		</div>
	</div>
</header>
<style>
	header {
		position: sticky;
		top: 0;
		z-index: 10;
		background: rgba(18, 18, 18, 0.88);
		backdrop-filter: blur(12px);
		border-bottom: 1px solid rgba(255, 255, 255, 0.05);
	}
	.header-inner {
		max-width: var(--max-width);
		margin: 0 auto;
		padding: 1.25rem 1.5rem;
		display: grid;
		grid-template-columns: auto 1fr auto;
		gap: 1.5rem;
		align-items: center;
	}
	.brand {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
		color: var(--color-text);
	}
	.brand-name {
		font-family: var(--font-heading);
		font-size: 1.4rem;
		letter-spacing: 0.08em;
		text-transform: uppercase;
	}
	.brand-tagline {
		font-size: 0.75rem;
		color: var(--color-muted);
		letter-spacing: 0.25em;
		text-transform: uppercase;
	}
	.main-nav {
		display: flex;
		gap: 1rem;
		justify-content: center;
	}
	.main-nav a {
		position: relative;
		padding: 0.5rem 0.75rem;
		font-size: 0.95rem;
		font-weight: 600;
		letter-spacing: 0.05em;
		text-transform: uppercase;
		color: var(--color-muted);
		transition: color 0.2s ease;
	}
	.main-nav a::after {
		content: '';
		position: absolute;
		inset-inline: 0;
		bottom: -0.3rem;
		height: 2px;
		background: var(--accent-color, var(--color-accent));
		transform: scaleX(0);
		transform-origin: center;
		transition: transform 0.2s ease;
	}
	.main-nav a:hover,
	.main-nav a:focus {
		color: var(--color-text);
	}
	.main-nav a:hover::after,
	.main-nav a:focus::after,
	.main-nav a.active::after {
		transform: scaleX(1);
	}
	.main-nav a.active {
		color: var(--color-text);
	}
	.social-links {
		display: flex;
		gap: 0.75rem;
	}
	.social-links a {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		border-radius: 12px;
		background: rgba(255, 255, 255, 0.05);
		color: var(--color-text);
		transition: background 0.2s ease, transform 0.2s ease;
	}
	.social-links a:hover,
	.social-links a:focus {
		background: rgba(190, 242, 100, 0.18);
		color: var(--accent-color, var(--color-accent));
		transform: translateY(-2px);
	}
	@media (max-width: 960px) {
		.header-inner {
			grid-template-columns: 1fr;
			gap: 1rem;
			text-align: center;
		}
		.brand {
			align-items: center;
		}
		.main-nav {
			flex-wrap: wrap;
		}
		.social-links {
			justify-content: center;
		}
	}
	@media (max-width: 640px) {
		.main-nav {
			gap: 0.5rem;
		}
		.main-nav a {
			font-size: 0.85rem;
			padding: 0.5rem;
			letter-spacing: 0.08em;
		}
		.brand-tagline {
			font-size: 0.7rem;
			letter-spacing: 0.2em;
		}
	}
</style>
